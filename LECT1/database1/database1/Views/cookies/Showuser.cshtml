@model IEnumerable<database1.Models.Login>

@{
    ViewData["Title"] = "Showuser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Showuser</h1>

<p>
    <a asp-action="Adduser">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.Rname)
            </td>
            <td>
                <a asp-action="Updateuser" asp-route-id="@item.Id">Edit</a> |
           
                <a asp-action="Deleteuser" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
